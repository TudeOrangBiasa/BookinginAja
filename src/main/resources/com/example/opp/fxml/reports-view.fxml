<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.opp.controller.ReportsController"
      spacing="24" styleClass="page-content">
    <padding><Insets top="24" right="24" bottom="24" left="24"/></padding>

    <!-- Page Header -->
    <VBox spacing="20" styleClass="report-header">
        <HBox alignment="CENTER_LEFT" spacing="16">
            <VBox spacing="4">
                <Label text="Laporan" style="-fx-font-size: 32px; -fx-font-weight: 700; -fx-text-fill: #212121;"/>
                <Label text="Lihat statistik dan laporan hotel" style="-fx-font-size: 14px; -fx-text-fill: #757575;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox spacing="12" alignment="CENTER_RIGHT">
                <DatePicker fx:id="fromDate" promptText="Dari Tanggal" style="-fx-pref-width: 150;"/>
                <DatePicker fx:id="toDate" promptText="Sampai Tanggal" style="-fx-pref-width: 150;"/>
                <Button text="Tampilkan" onAction="#handleGenerate" styleClass="btn-primary"/>
                <Button text="Export PDF" onAction="#handleExportPdf" style="-fx-background-color: white; -fx-text-fill: #6C5CE7; -fx-border-color: #6C5CE7; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10 20; -fx-font-weight: 600; -fx-cursor: hand;"/>
            </HBox>
        </HBox>

        <!-- Summary Cards Grid -->
        <HBox spacing="20" alignment="CENTER">
            <VBox spacing="8" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 8, 0, 0, 2);" HBox.hgrow="ALWAYS">
                <Label text="Total Booking" style="-fx-font-size: 13px; -fx-text-fill: #757575; -fx-font-weight: 500;"/>
                <Label fx:id="totalBookings" text="0" style="-fx-font-size: 36px; -fx-font-weight: 700; -fx-text-fill: #212121;"/>
            </VBox>
            <VBox spacing="8" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 8, 0, 0, 2);" HBox.hgrow="ALWAYS">
                <Label text="Total Pendapatan" style="-fx-font-size: 13px; -fx-text-fill: #757575; -fx-font-weight: 500;"/>
                <Label fx:id="totalRevenue" text="Rp 0" style="-fx-font-size: 36px; -fx-font-weight: 700; -fx-text-fill: #6C5CE7;"/>
            </VBox>
            <VBox spacing="8" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 8, 0, 0, 2);" HBox.hgrow="ALWAYS">
                <Label text="Rata-rata Menginap" style="-fx-font-size: 13px; -fx-text-fill: #757575; -fx-font-weight: 500;"/>
                <Label fx:id="avgStay" text="0 malam" style="-fx-font-size: 36px; -fx-font-weight: 700; -fx-text-fill: #212121;"/>
            </VBox>
            <VBox spacing="8" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 8, 0, 0, 2);" HBox.hgrow="ALWAYS">
                <Label text="Tingkat Hunian" style="-fx-font-size: 13px; -fx-text-fill: #757575; -fx-font-weight: 500;"/>
                <Label fx:id="occupancyRate" text="0%" style="-fx-font-size: 36px; -fx-font-weight: 700; -fx-text-fill: #00B894;"/>
            </VBox>
        </HBox>
    </VBox>

    <!-- Report Content -->
    <VBox styleClass="card" VBox.vgrow="ALWAYS" spacing="0">
        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-padding: 16; -fx-border-color: #E5E7EB; -fx-border-width: 0 0 1 0;">
            <Label text="Ringkasan Booking" styleClass="card-header"/>
        </HBox>
        <TableView fx:id="reportTable" VBox.vgrow="ALWAYS" styleClass="data-table">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="numberCol" text="No" minWidth="50" maxWidth="60" resizable="false"/>
                <TableColumn fx:id="dateCol" text="Tanggal" minWidth="120"/>
                <TableColumn fx:id="bookingsCol" text="Booking" minWidth="80" maxWidth="100"/>
                <TableColumn fx:id="checkInsCol" text="Check-in" minWidth="80" maxWidth="100"/>
                <TableColumn fx:id="checkOutsCol" text="Check-out" minWidth="80" maxWidth="100"/>
                <TableColumn fx:id="revenueCol" text="Pendapatan" minWidth="130"/>
            </columns>
            <placeholder>
                <Label text="Pilih rentang tanggal dan klik Tampilkan" styleClass="empty-state"/>
            </placeholder>
        </TableView>
    </VBox>
</VBox>
