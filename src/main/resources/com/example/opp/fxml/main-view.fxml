<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.opp.controller.MainController"
            styleClass="main-container" stylesheets="@../css/style.css">

    <!-- Sidebar -->
    <left>
        <VBox styleClass="sidebar">
            <!-- Logo Header -->
            <VBox styleClass="sidebar-header" spacing="2">
                <Label text="HOTEL MS" styleClass="app-title"/>
                <Label fx:id="userRoleLabel" text="Administrator" styleClass="app-subtitle"/>
            </VBox>

            <!-- Navigation -->
            <VBox styleClass="nav-menu" spacing="2">
                <padding><Insets top="16" right="0" bottom="16" left="0"/></padding>

                <HBox fx:id="navDashboard" styleClass="nav-item, nav-item-active" onMouseClicked="#showDashboard">
                    <Label text="Dashboard" styleClass="nav-text"/>
                </HBox>

                <HBox fx:id="navRooms" styleClass="nav-item" onMouseClicked="#showRooms">
                    <Label text="Kamar" styleClass="nav-text"/>
                </HBox>

                <HBox fx:id="navBookings" styleClass="nav-item" onMouseClicked="#showBookings">
                    <Label text="Booking" styleClass="nav-text"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="bookingNotification" text="0" styleClass="notification-badge" visible="false"/>
                </HBox>

                <HBox fx:id="navGuests" styleClass="nav-item" onMouseClicked="#showGuests">
                    <Label text="Tamu" styleClass="nav-text"/>
                </HBox>

                <!-- Admin Only Menu -->
                <Label fx:id="adminSeparator" text="ADMIN" styleClass="nav-separator" visible="false" managed="false"/>
                
                <HBox fx:id="navReports" styleClass="nav-item" onMouseClicked="#showReports" visible="false" managed="false">
                    <Label text="Laporan" styleClass="nav-text"/>
                </HBox>

                <HBox fx:id="navUsers" styleClass="nav-item" onMouseClicked="#showUsers" visible="false" managed="false">
                    <Label text="Kelola User" styleClass="nav-text"/>
                </HBox>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <!-- User Info & Logout -->
            <VBox styleClass="sidebar-footer" spacing="8">
                <VBox spacing="2">
                    <Label fx:id="userNameLabel" text="Admin User" styleClass="user-name"/>
                    <Label fx:id="userEmailLabel" text="admin@hotel.com" styleClass="user-email"/>
                </VBox>
                <Button text="Keluar" onAction="#handleLogout" styleClass="btn-logout" maxWidth="Infinity"/>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area"/>
    </center>
</BorderPane>
